procedure map_enter_p_proc
begin
    if ((CUR_MAP_MODINN) and (elevation(self_obj) != ((global_var(GVAR_MODOC_GENERIC_FLAG_1) bwand 1) != 0))) then begin
        move_to(self_obj, tile_num(self_obj), (global_var(GVAR_MODOC_GENERIC_FLAG_1) bwand 1) != 0);
    end
    if (is_loading_game == 0) then begin
        if (obj_is_open(self_obj)) then begin
            obj_close(self_obj);
        end
        rm_fixed_timer_event(self_obj, 1);
        add_timer_event(self_obj, game_ticks(10), 1);
    end
end

procedure use_p_proc
begin
    last_source := source_obj;
end

procedure timed_event_p_proc
begin
    if (obj_is_open(self_obj)) then begin
        if ((tile_distance_objs(self_obj, dude_obj) > 15) or (last_source == 0)) then begin
            obj_close(self_obj);
        end
        else begin
            if (tile_distance_objs(self_obj, last_source) > 6) then begin
                obj_close(self_obj);
                last_source := 0;
            end
        end
    end
    rm_fixed_timer_event(self_obj, 1);
    add_timer_event(self_obj, game_ticks(10), 1);
end
