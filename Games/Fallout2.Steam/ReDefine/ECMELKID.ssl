procedure timed_event_p_proc
begin
    if (combat_is_initialized == 0) then begin
        if (anim_busy(self_obj) == 0) then begin
            if (obj_can_see_obj(self_obj, dude_obj)) then begin
                if (local_var(1) == 0) then begin
                    anim(self_obj, 1000, rotation_to_tile(tile_num(self_obj), dude_tile));
                end
            end
            else begin
                if (tile_distance(tile_num(self_obj), local_var(2)) > 12) then begin
                    animate_move_obj_to_tile(self_obj, tile_num_in_direction(tile_num(self_obj), rotation_to_tile(tile_num(self_obj), local_var(2)), random(5, 10)), 1);
                end
                else begin
                    animate_move_obj_to_tile(self_obj, tile_num_in_direction(tile_num(self_obj), random(0, 5), random(5, 10)), 1);
                end
            end
        end
    end
    rm_fixed_timer_event(self_obj, 1);
    add_timer_event(self_obj, game_ticks(1), 1);
end

