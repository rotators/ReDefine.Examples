procedure start;


procedure start
begin
    if (script_action == 2) then begin
        if (obj_type(source_obj) == dude_obj) then begin
            if (local_var(0) == 0) then begin
                set_local_var(0, 1);
                if (is_success(do_check(dude_obj, 1, 0))) then begin
                    display_msg(message_str(151, 100));
                end
            end
        end
    end
end

