        end
        else begin
            inTransit := 0;
            call finishWalk();
        end
    end
end

procedure getTileNum
begin
    if (self_guard_num == 1) then begin
        return tile_num_in_direction(tile_num(merk_obj), 1, 2);
    end
    else begin
        if (self_guard_num == 2) then begin
            return tile_num_in_direction(tile_num(merk_obj), 4, 1);
        end
    end
end

procedure finishWalk
begin
    if (self_guard_num == 1) then begin
        anim(self_obj, 1000, 1);
    end
    else begin
        if (self_guard_num == 2) then begin
            anim(self_obj, 1000, 3);
        end
    end
end

procedure timed_event_p_proc
begin
    if (fixed_param == 1) then begin
        call timerEvent();
    end
end

