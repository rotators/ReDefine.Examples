procedure combat_p_proc
begin
    if (not(doExplosion())) then begin
        attack_complex(dude_obj, 0, 1, 0, 0, 30000, 0, 0);
    end
end

procedure critter_p_proc
begin
    if (not(doExplosion())) then begin
        if (not(anim_busy(self_obj))) then begin
            reg_anim_func(2, self_obj);
            reg_anim_func(1, 1);
            animate_move_obj_to_tile(self_obj, tile_num_in_direction(tile_num(dude_obj), random(0, 5), 1), 1);
            reg_anim_func(3, 0);
        end
    end
end

procedure timed_event_p_proc
begin
    if (fixed_param == 1) then begin
        float_msg(self_obj, message_str(203, 201 + random(0, 5)), 2);
        add_timer_event(self_obj, random(10, 50), 1);
    end
end

procedure doExplosion
begin
    if (tile_distance_objs(self_obj, dude_obj) < 2) then begin
        explosion(tile_num(self_obj), elevation(self_obj), 150);
        return 1;
    end
    return 0;
end

