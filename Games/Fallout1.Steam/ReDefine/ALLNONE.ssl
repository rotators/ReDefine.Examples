begin
    Reply(101);
    giq_option(4, NAME, 102, Merchant01, NEUTRAL_REACTION);
    giq_option(4, NAME, 103, Merchant02, NEUTRAL_REACTION);
    giq_option(4, NAME, 104, Merchant03, NEUTRAL_REACTION);
    giq_option(-3, NAME, 105, Merchant04, NEUTRAL_REACTION);
end

