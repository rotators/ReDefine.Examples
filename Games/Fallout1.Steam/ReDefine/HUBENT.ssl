procedure start
begin
    if (script_action == map_enter_proc) then begin
        call add_party();
        if (map_first_run) then begin
            display_msg(message_str(SCRIPT_SHADYWST, 105));
        end
        override_map_start(107, 49, 0, 2);
        set_global_var(GVAR_MARK_HUB_1, 1);
        if ((game_time / (10 * 60 * 60 * 24)) >= global_var(GVAR_THE_HUB_INVADED_DATE)) then begin
            set_global_var(GVAR_HUB_INVADED, 1);
        end
        call Lighting();
    end
    else begin
        if (script_action == map_update_proc) then begin
            call Lighting();
            call update_party();
        end
        else begin
            if (script_action == map_exit_proc) then begin
                call remove_party();
            end
        end
    end
end

procedure Lighting
begin
    variable LVar0 := 0;
    LVar0 := game_time_hour;
    if ((LVar0 >= 600) and (LVar0 < 700)) then begin
        set_light_level(LVar0 - 600 + 40);
    end
    else begin
        if ((LVar0 >= 700) and (LVar0 < 1800)) then begin
            set_light_level(100);
        end
        else begin
            if ((LVar0 >= 1800) and (LVar0 < 1900)) then begin
                set_light_level(100 - (LVar0 - 1800));
            end
            else begin
                set_light_level(40);
            end
        end
    end
end

