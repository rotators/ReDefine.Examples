end

procedure BigUpReact
begin
    reaction := reaction + 25;
    call ReactToLevel();
end

procedure BigDownReact
begin
    reaction := reaction - 25;
    call ReactToLevel();
end

procedure UpReactLevel
begin
    reaction_level := reaction_level + 1;
    if (reaction_level > 3) then begin
        reaction_level := 3;
    end
    call LevelToReact();
end

procedure DownReactLevel
begin
    reaction_level := reaction_level - 1;
    if (reaction_level < 1) then begin
        reaction_level := 1;
    end
    call LevelToReact();
end

