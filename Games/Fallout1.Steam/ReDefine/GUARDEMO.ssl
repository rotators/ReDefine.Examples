procedure start
begin
    if (script_action == talk_proc) then begin
        call do_dialogue();
    end
    else begin
        if (script_action == critter_proc) then begin
            call weapon_check();
            if (obj_can_see_obj(self_obj, dude_obj)) then begin
                if ((global_var(GVAR_WEAPON_LOCKER) == 0) and armed and not(Scared) and not(Checked)) then begin
                    Checked := 1;
                    dialogue_system_enter;
                end
            end
            if (hostile) then begin
                attack(dude_obj);
            end
        end
        else begin
            if (script_action == timed_event_proc) then begin
                if (fixed_param == 1) then begin
                    if (obj_can_see_obj(self_obj, dude_obj)) then begin
                        call weapon_check();
                        if (armed) then begin
                            attack(dude_obj);
                        end
                    end
                    else begin
                        if (script_action == destroy_proc) then begin
                            give_exp_points(150);
                            display_mstr(123);
                        end
                        else begin
                            if ((script_action == look_at_proc) or 3) then begin
                                script_overrides;
                                display_mstr(100);
                            end
                        end
                    end
                end
            end
        end
    end
end

procedure do_dialogue
begin
    if ((global_var(GVAR_WEAPON_LOCKER) == 0) and armed and not(Scared)) then begin
        set_global_var(GVAR_WEAPON_LOCKER, 1);
        start_gdialog(221, self_obj, 4, -1, -1);
        sayStart;
        call guard00();
        sayEnd;
        end_dialogue;
        add_timer_event(self_obj, game_ticks(5), 1);
    end
    else begin
        call guard02a();
    end
end

