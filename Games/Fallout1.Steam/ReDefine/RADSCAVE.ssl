        if (map_first_run) then begin
            display_msg(message_str(SCRIPT_GENCHAT, 189));
        end
        set_light_level(40);
        if (global_var(GVAR_LOAD_MAP_INDEX) == 1) then begin
            override_map_start(156, 106, 0, 1);
        end
        else begin
            override_map_start(156, 106, 0, 1);
        end
        call add_party();
    end
    else begin
        if (script_action == map_exit_proc) then begin
            game_time_advance(game_ticks(60 * 30));
            call remove_party();
        end
    end
end

