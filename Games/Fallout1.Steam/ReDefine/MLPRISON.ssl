procedure explode
begin
    critter_dmg(self_obj, 128, DMG_explosion);
end

procedure escape
begin
    if (said == 0) then begin
        said := 1;
        float_msg(self_obj, mstr(107), FLOAT_MSG_RED);
    end
    target_hex := 22912;
    animate_move_obj_to_tile(self_obj, target_hex, 1);
end

