procedure map_enter_p_proc
begin
    set_local_var(0, tile_num(self_obj));
    set_local_var(1, has_trait(1, self_obj, 10));
    critter_add_trait(self_obj, 1, 5, 64);
    if (party_member_obj(obj_pid(self_obj))) then begin
        critter_add_trait(self_obj, 1, 6, 0);
    end
    if (cur_map_index == 241) then begin
        if (global_var(1081) > 2) then begin
            set_obj_visibility(self_obj, 1);
        end
        else begin
            set_obj_visibility(self_obj, (game_time > 2000) and (game_time < 800));
        end
    end
    if (cur_map_index == 243) then begin
        if (not(party_member_obj(obj_pid(self_obj)))) then begin
            critter_add_trait(self_obj, 1, 6, 0);
            party_add(self_obj);
        end
    end
end

