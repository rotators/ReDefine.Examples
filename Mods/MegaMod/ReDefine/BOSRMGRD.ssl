procedure talk_p_proc
begin
    if (global_var(GVAR_DUDE_IS_SCRIBE) == 2) then begin
        float_msg(self_obj, mstr(200 + random(1, 4)), FLOAT_MSG_YELLOW);
    end
    else begin
