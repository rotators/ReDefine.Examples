procedure critter_p_proc
begin
    if (obj_can_see_obj(self_obj, dude_obj)) then begin
        if (global_var(GVAR_GECKO_MELTDOWN) == 1) then begin
            set_local_var(4, 1);
            attack(dude_obj);
        end
        else begin
            if ((local_var(4) == 2) or (local_var(5) == 1)) then begin
                set_local_var(4, 1);
                attack(dude_obj);
            end
            else begin
                if (map_var(3) == 1) then begin
                    if (map_var(4) < 1) then begin
                        set_map_var(4, map_var(4) + 1);
                        call Node010();
                    end
                    else begin
                        call Node998();
                    end
                end
                else begin
                    if ((local_var(6) == 1) and using_skill(dude_obj, 8)) then begin
                        set_local_var(6, 1);
                        call Node002();
                    end
                end
            end
        end
    end
end

