procedure spatial_p_proc
begin
    if (not(global_var(GVAR_SULIK_SISTER) == 1)) then begin
        if (source_obj == dude_obj) then begin
            if (local_var(4) == 0) then begin
                set_local_var(4, 1);
                if (in_dialog == 0) then begin
                    in_dialog := 1;
                    start_gdialog(2292, self_obj, 4, -1, -1);
                    gsay_start;
                    call Node004();
                    gsay_end;
                    end_dialogue;
                    in_dialog := 0;
                end
                else begin
                    call Node004();
                end
            end
        end
    end
end

