procedure critter_p_proc
begin
    if ((local_var(5) == 2) or map_var(0) and obj_can_see_obj(self_obj, dude_obj)) then begin
        set_local_var(5, 1);
        attack(dude_obj);
    end
    else begin
        if ((local_var(7) == 1) and obj_can_see_obj(self_obj, dude_obj) and using_skill(dude_obj, 8)) then begin
