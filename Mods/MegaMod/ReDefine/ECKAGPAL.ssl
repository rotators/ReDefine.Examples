procedure combat_p_proc
begin
    if (critter_is_fleeing(self_obj)) then begin
        if (random(1, 100) <= 40) then begin
            call NodeFleeing();
        end
    end
    else begin
        if (random(1, 100) <= 40) then begin
            call NodeFighting();
        end
    end
end

