procedure start
begin
    obj_lock(self_obj);
end

procedure use_p_proc
begin
    if (global_var(GVAR_ABBEY_TO_BH_QUEST) == 3) then begin
        if (obj_is_locked(self_obj)) then begin
            obj_unlock(self_obj);
        end
        reg_anim_func(2, self_obj);
        reg_anim_func(1, 1);
        obj_open(self_obj);
        reg_anim_func(3, 0);
        set_local_var(0, game_time + (10 * 5));
    end
    else begin
        reg_anim_func(2, self_obj);
        reg_anim_func(1, 1);
        obj_close(self_obj);
        reg_anim_func(3, 0);
        if (not(obj_is_locked(self_obj))) then begin
            obj_lock(self_obj);
        end
        set_local_var(0, 0);
    end
end

