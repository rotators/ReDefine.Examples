procedure timed_event_p_proc
begin
    if (fixed_param == 1) then begin
        reg_anim_func(2, self_obj);
        reg_anim_func(1, 1);
        reg_anim_animate(self_obj, 20, -1);
        reg_anim_func(3, 0);
        add_timer_event(self_obj, game_ticks(1), 2);
    end
    if (fixed_param == 2) then begin
        kill_critter(self_obj, 48);
    end
end

procedure map_enter_p_proc
begin
    critter_add_trait(self_obj, TRAIT_OBJECT, OBJECT_TEAM_NUM, 276);
    critter_add_trait(self_obj, TRAIT_OBJECT, OBJECT_AI_PACKET, AI_CHILD);
    if (map_first_run) then begin
        if ((tile_num(self_obj) == 19526) or (tile_num(self_obj) == 23518)) then begin
            set_local_var(4, 1);
        end
    end
end

procedure map_update_p_proc
begin
    if ((global_var(GVAR_G_QUEST_FREE_PRISONERS_SNEAK) == 2) and (dude_elevation == 0)) then begin
        if (local_var(4) > 0) then begin
            kill_critter(self_obj, 61);
        end
        else begin
            destroy_object(self_obj);
        end
    end
    if ((global_var(GVAR_G_QUEST_FREE_PRISONERS_FIGHT) == 2) and (dude_elevation == 0)) then begin
        destroy_object(self_obj);
