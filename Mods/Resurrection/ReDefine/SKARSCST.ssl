    if ((global_var(GVAR_KARAVAN_ROUTES_COMMAND_BITS) bwand 4) != 0) then begin
        probability := random(1, 4);
    end
    else begin
        probability := random(1, 3);
    end
    if (probability == 1) then begin
        item := 18;
    end
    if (probability == 2) then begin
        item := 9;
    end
    if (probability == 3) then begin
        item := 10;
    end
