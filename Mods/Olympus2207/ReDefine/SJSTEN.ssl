procedure timed_event_p_proc
begin
    if ((fixed_param == 1) and not(combat_is_initialized)) then begin
        animation_is_called := 0;
    end
    if ((fixed_param == 2) and not(combat_is_initialized)) then begin
        float_is_called := 0;
    end
    if (fixed_param == 3) then begin
        set_global_var(GVAR_BH_BOSS, 3);
        float_msg(self_obj, mstr(16), FLOAT_MSG_NORMAL);
        game_ui_enable;
        critter_add_trait(self_obj, TRAIT_OBJECT, OBJECT_TEAM_NUM, 28);
        attack_setup(self_obj, dude_obj);
    end
    if (fixed_param == 4) then begin
        trading_container := tile_contains_pid_obj(111, 2, 250);
        trading_container2 := tile_contains_pid_obj(2, 2, 250);
        move_obj_inven_to_obj(trading_container, dude_obj);
        move_obj_inven_to_obj(trading_container2, self_obj);
        set_global_var(GVAR_SPECIAL_ENCOUNTER_FLAGS, 1);
        fadeOut(800);
        move_to(dude_obj, 13690, 0);
        anim(dude_obj, 1000, 4);
        move_to(self_obj, 13692, 0);
        anim(self_obj, 1000, 1);
        set_global_var(GVAR_BH_BOSS, 4);
        critter_add_trait(self_obj, TRAIT_OBJECT, OBJECT_TEAM_NUM, 7);
        metarule3(METARULE3_TILE_SET_CENTER, dude_tile, elevation(self_obj), 0);
        fadeIn(700);
    end
    if (fixed_param == 5) then begin
        animate_move_obj_to_tile(self_obj, tile_num_in_direction(tile_num(self_obj), 1, random(25, 25)), 1);
        fadeOut(1000);
        move_to(self_obj, local_var(3), 2);
        set_global_var(GVAR_BH_HENCH_COUNT, 1);
        fadeIn(700);
    end
end

