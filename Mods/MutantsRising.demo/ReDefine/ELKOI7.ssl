            script_overrides;
            if (party_member_obj(16777701) != 0) then begin
                float_msg(cassidy_ptr, mstr(random(103, 106)), FLOAT_MSG_RED);
            end
            else begin
                fade_out;
                display_msg(mstr(107));
                game_time_advance(8 * (60 * 10));
                fade_in;
                set_map_var(4, 1);
                game_time_advance(2 * (60 * 10));
            end
        end
    end
end

